<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="month"
            type="com.thedroidboy.jalendar.model.Month" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/week_headers" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.thedroidboy.jalendar.SimpleWeekView
                android:id="@+id/week1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.thedroidboy.jalendar.SimpleWeekView
                android:id="@+id/week2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.thedroidboy.jalendar.SimpleWeekView
                android:id="@+id/week3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.thedroidboy.jalendar.SimpleWeekView
                android:id="@+id/week4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.thedroidboy.jalendar.SimpleWeekView
                android:id="@+id/week5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.thedroidboy.jalendar.SimpleWeekView
                android:id="@+id/week6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

