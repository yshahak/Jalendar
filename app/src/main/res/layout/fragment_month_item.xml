<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="month"
            type="com.thedroidboy.jalendar.model.Month" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rotationY="180"
        android:orientation="vertical">

        <include layout="@layout/week_headers" />

        <LinearLayout
            android:id="@+id/month_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.thedroidboy.jalendar.SimpleWeekView
                android:id="@+id/week1"
                android:layoutDirection="rtl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.thedroidboy.jalendar.SimpleWeekView
                android:id="@+id/week2"
                android:layoutDirection="rtl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.thedroidboy.jalendar.SimpleWeekView
                android:id="@+id/week3"
                android:layoutDirection="rtl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.thedroidboy.jalendar.SimpleWeekView
                android:id="@+id/week4"
                android:layoutDirection="rtl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.thedroidboy.jalendar.SimpleWeekView
                android:id="@+id/week5"
                android:layoutDirection="rtl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.thedroidboy.jalendar.SimpleWeekView
                android:id="@+id/week6"
                android:layoutDirection="rtl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>


</layout>