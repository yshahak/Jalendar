<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="event"
            type="com.thedroidboy.jalendar.model.GoogleEvent" />

        <import type="android.view.View" />

        <variable
            name="repeatVisibility"
            type="java.lang.Boolean" />

        <variable
            name="spinnerAdapter"
            type="com.thedroidboy.jalendar.adapters.SpinnerCalIdAdapter" />
    </data>

    <ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.Toolbar
                android:id="@+id/my_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:elevation="4dp"
                android:padding="8dp"
                android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/header_btn_x"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:onClick="clickX"
                            android:padding="4dp"
                            android:src="@android:drawable/ic_menu_close_clear_cancel" />

                        <ImageView
                            android:id="@+id/header_btn_delete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:onClick="deleteEvent"
                            android:padding="4dp"
                            android:src="@android:drawable/ic_menu_delete" />

                        <TextView
                            android:id="@+id/header_btn_save"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:onClick="saveClicked"
                            android:text="שמור"
                            android:textColor="@android:color/white"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <EditText
                        android:id="@+id/header_edit_text_event_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="הזן כותרת"
                        android:imeActionLabel="Done"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:maxLines="1"
                        android:src="@android:drawable/ic_menu_close_clear_cancel"
                        android:text="@{event.eventTitle}"
                        android:textColor="@android:color/white"
                        android:textColorHint="@android:color/white" />

                    <Spinner
                        android:id="@+id/spinner_event_cal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:entries="@{spinnerAdapter.entries}"
                        android:onItemSelected="@{(p, v, pos, id) -> event.onCalIdSelected(pos)}"
                        android:selection="@{spinnerAdapter.selectedItem}"
                        android:visibility="@{spinnerAdapter.shouldShowSpinner ? View.VISIBLE : View.GONE}" />
                </LinearLayout>

            </android.support.v7.widget.Toolbar>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/ic_dialog_time" />


                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/checkbox_all_day_event"
                    style="@style/style_checkbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:checked="@{event.allDayEvent}"
                    android:text="כל היום" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="horizontal"
                android:visibility="@{event.allDayEvent ? View.GONE : View.VISIBLE}">


                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="2" />

                <TextView
                    android:id="@+id/event_start_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="openDayDialog"
                    android:padding="8dp"
                    android:text="@{event.startEventDate}"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    tools:text="רביעי, ג' חשון" />

                <TextView
                    android:id="@+id/event_start_day_loazy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="openDayDialog"
                    android:padding="8dp"
                    android:text="@{event.startEventDateLoazy}"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    tools:text="05/12" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="3" />


                <TextView
                    android:id="@+id/event_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="openTimeDialog"
                    android:padding="8dp"
                    android:text="@{event.startEventHour}"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    tools:text="7:15" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="horizontal"
                android:visibility="@{event.allDayEvent ? View.GONE : View.VISIBLE}">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="2" />

                <TextView
                    android:id="@+id/event_end_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="openDayDialog"
                    android:padding="8dp"
                    android:text="@{event.endEventDate}"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    tools:text="רביעי, ג' חשון" />

                <TextView
                    android:id="@+id/event_end_day_loazy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="openDayDialog"
                    android:padding="8dp"
                    android:text="@{event.endEventDateLoazy}"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    tools:text="05/12" />


                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="3" />

                <TextView
                    android:id="@+id/event_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="openTimeDialog"
                    android:padding="8dp"
                    android:text="@{event.endEventHour}"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    tools:text="8:15" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:background="@color/dayline_minical_holo_light" />

