<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:spinnerDropDownItemStyle">@style/mySpinnerItemStyle</item>
        <item name="android:spinnerItemStyle">@style/mySpinnerItemStyle</item>
    </style>

    <style name="style_radio_group" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_gravity">right|center_vertical</item>
        <item name="android:textColor">@color/radio_selector</item>
    </style>

    <style name="style_text_config_header" parent="@style/style_text_row">
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="direction">
        <item name="android:layoutDirection">rtl</item>
    </style>


    <style name="style_notifcation_text" parent="@android:style/TextAppearance.StatusBar.Title">
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:gravity">right</item>

        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="style_text_row">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="toolbar_gravity">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="mySpinnerItemStyle" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>
